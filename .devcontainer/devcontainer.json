{
    "name":"ml_ops_dz1",
    "dockerComposeFile": "../docker-compose.dev.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "forwardPorts": [
        80,    // Только Nginx!
        5432,  // PostgreSQL
        9000,  // MinIO API
        9001   // MinIO Console
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter"
            ]
        }
    }
}